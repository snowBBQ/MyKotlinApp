<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/openTerminalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Terminal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/closeTerminalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Terminal"
        android:layout_below="@id/openTerminalButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/closeTerminalButton"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textSize="16sp"/>
</RelativeLayout>